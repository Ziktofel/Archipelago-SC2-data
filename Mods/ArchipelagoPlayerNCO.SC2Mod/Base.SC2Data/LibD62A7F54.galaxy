    TriggerEnable(libNCUI_gt_NU_HealthWatchStartSound, false);
    TriggerEnable(libNCUI_gt_NU_HealthWatchHeartLoop, false);
    TriggerEnable(libNCUI_gt_NU_HealthWatchBreathLoop, false);
}

void libD62A7F54_gf_updateDamageMultipliers () {
    // Variable Declarations
    int lv_difficulty;
    int lv_gameSpeed;

    // Automatic Variable Declarations
    // Variable Initialization
    lv_difficulty = 2;

    // Implementation
    lv_difficulty = PlayerDifficulty(1);
    lv_gameSpeed = GameGetSpeedValue();
    libCMMI_gf_DifficultySetting(lv_difficulty);
    GameSetSpeedValueMinimum(c_gameSpeedSlower);
    GameSetSpeedValue(lv_gameSpeed);
}

